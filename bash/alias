// extract filename from path
  filename=$(basename -- "$1")
  extension="${filename##*.}"
  filename="${filename%.*}"
  echo "filename: $filename Extension: $extension"


pandoc  -c pandoc.css -s --standalone -f markdown+smart $1 > /tmp/$filename.html
#  cp /home/daboss/knowledge/themes/pandoc/dark-pandoc.css /tmp/pandoc.css
#  xdg-open /tmp/$1.html
  omarchy-launch-webapp file:///tmp/$filename.html
}
